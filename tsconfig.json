{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@assets/*": ["./src/assets/*"],
			"@config/*": ["./src/config/*"],
			"@customTypes/*": ["./src/customTypes/*"],
			"@services/*": ["./src/services/*"],
			"@components/*": ["./src/components/*"],
			"@utils/*": ["./src/utils/*"],
			"contentlayer/generated": ["./.contentlayer/generated"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"src/app/page.tsx",
		"src/app/layout.tsx",
		"tailwind.config.js",
		"postcss.config.js",
		".contentlayer/generated"
	],
	"exclude": ["node_modules", "next.config.js"]
}
